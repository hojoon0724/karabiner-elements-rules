{
  "description": "Tilde: double tap -> terminal, single tap -> tilde",
  "manipulators": [
    {
      "conditions": [
        {
          "bundle_identifiers": ["com\\.microsoft\\.VSCode", "com\\.microsoft\\.VSCodeInsiders"],
          "type": "frontmost_application_if"
        },
        {
          "name": "tilde pressed",
          "type": "variable_if",
          "value": 1
        }
      ],
      "from": {
        "key_code": "grave_accent_and_tilde"
      },
      "to": [
        {
          "key_code": "grave_accent_and_tilde",
          "modifiers": ["left_control"]
        }
      ],
      "to_after_key_up": [
        {
          "set_variable": {
            "name": "tilde pressed",
            "value": 0
          }
        }
      ],
      "type": "basic"
    },
    {
      "from": {
        "key_code": "grave_accent_and_tilde",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "parameters": {
        "basic.to_delayed_action_delay_milliseconds": 250
      },
      "to": [
        {
          "set_variable": {
            "name": "tilde pressed",
            "value": 1
          }
        }
      ],
      "to_delayed_action": {
        "to_if_invoked": [
          {
            "set_variable": {
              "name": "tilde pressed",
              "value": 0
            }
          },
          {
            "key_code": "grave_accent_and_tilde"
          }
        ]
      },
      "type": "basic"
    }
  ]
}

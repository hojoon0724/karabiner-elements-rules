{
  "description": "Home row mods with correct key roll behavior",
  "manipulators": [
    {
      "description": "a: shift when held, a when tapped",
      "from": { "key_code": "a", "modifiers": { "optional": ["any"] } },
      "to": [{ "set_variable": { "name": "a_pressed", "value": 1 } }],
      "to_if_alone": [{ "key_code": "a" }],
      "to_if_held_down": [{ "key_code": "left_shift" }],
      "to_after_key_up": [{ "set_variable": { "name": "a_pressed", "value": 0 } }],
      "parameters": { "basic.to_if_held_down_threshold_milliseconds": 200 },
      "type": "basic"
    },
    {
      "description": "Emit 'a' on roll",
      "from": { "key_code": "a", "modifiers": { "optional": ["any"] } },
      "conditions": [{ "type": "variable_if", "name": "a_pressed", "value": 1 }],
      "to": [{ "set_variable": { "name": "a_pressed", "value": 0 } }, { "key_code": "a" }],
      "type": "basic"
    },

